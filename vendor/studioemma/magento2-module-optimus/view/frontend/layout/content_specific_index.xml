<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column-wide" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>
            Specific content blocks
        </title>
    </head>
    <body>
        <!-- NORMAL HEAD TITLE IS NOT TRANSLATED -->
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Specific content blocks</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/specific.phtml" name="optimus-content-specific" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/specific/dummy.phtml" name="optimus-content-specific-dummy" />
        </referenceContainer>
    </body>
</page>
